<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.gulimall.product.dao.AttrGroupDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.atguigu.gulimall.product.entity.AttrGroupEntity" id="attrGroupMap">
        <result property="attrGroupId" column="attr_group_id"/>
        <result property="attrGroupName" column="attr_group_name"/>
        <result property="sort" column="sort"/>
        <result property="descript" column="descript"/>
        <result property="icon" column="icon"/>
        <result property="catelogId" column="catelog_id"/>
    </resultMap>
    <!-- java实体类中有嵌套属性，要自定义映射 -->
    <!-- resultType返回集合里元素的类型 -->
    <resultMap id="spuItemAttrGroupAttrVO" type="com.atguigu.gulimall.product.vo.SpuItemAttrGroupAttrVO">
        <!-- 单个属性应result标签映射 property为java实体类 column为数据库字段 -->
        <result property="groupName" column="attr_group_name"></result>

        <!-- 集合类型用collection声明  property为java实体类 ofType为元素的java实体类-->
        <collection property="attrs" ofType="com.atguigu.gulimall.product.vo.Attr">
            <!-- 元素内部属性单个result一一映射 -->
            <result property="attrName" column="attr_name"></result>
            <result property="attrValue" column="attr_value"></result>
        </collection>
    </resultMap>

    <!-- 特定分类特定spu的属性分组下的属性名和属性值 -->
    <select id="getAttrGroupWithAttrsBySpuId"
            resultMap="spuItemAttrGroupAttrVO">
        SELECT
            pav.spu_id,
            ag.attr_group_id,
            ag.attr_group_name,
            aar.attr_id,
            attr.attr_name,
            pav.attr_value
        FROM
            pms_attr_group ag
                LEFT JOIN pms_attr_attrgroup_relation aar ON aar.attr_group_id = ag.attr_group_id
                LEFT JOIN pms_attr attr ON attr.attr_id = aar.attr_id
                LEFT JOIN pms_product_attr_value pav ON pav.attr_id = attr.attr_id
        WHERE
            ag.catelog_id = #{catalogId}
          AND pav.spu_id = #{spuId}
    </select>


</mapper>